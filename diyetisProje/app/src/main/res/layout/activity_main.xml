<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/agreen"
    tools:context=".MainActivity"


    >

    <Button
        android:id="@+id/btn_giris"
        android:layout_width="281dp"
        android:layout_height="66dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="@color/green"
        android:text="@string/uye_giris"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/devamet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_kayit" />

    <Button
        android:id="@+id/btn_kayit"
        android:layout_width="281dp"
        android:layout_height="66dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="262dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/green"
        android:text="@string/kayit_ol"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_giris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/devamet"
        android:layout_width="280dp"
        android:layout_height="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="228dp"
        android:text="@string/uye_olmadan_devam_et"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_giris" />
</androidx.constraintlayout.widget.ConstraintLayout>
